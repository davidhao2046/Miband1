<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="252dp"
            android:layout_height="42dp"
            android:text="Config"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="28dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START Monitoring"
                android:id="@+id/startMonitorHeartRateButton"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STOP MOnitoring"
                android:id="@+id/stopMonitorHeartRateButton"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="309dp"
                android:layout_height="177dp"
                android:text="message"
                android:id="@+id/text_Debug"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:gravity="bottom"

                android:scrollbars = "vertical"
                />

            <TextView
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_userID"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="user" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Testing"
                android:id="@+id/disconnectButton"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Testing"
                android:id="@+id/connect2ServerButton"
                android:layout_row="0"
                android:layout_column="0" />
        </GridLayout>

    </GridLayout>
</LinearLayout>